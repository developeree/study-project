<mapper namespace="com.study_project.web.mapper.sqlMap.BeerDao">

	<select id="readBeerList" parameterType="Beer" resultType="Beer">
		SELECT * FROM beer
		<if test="search != null">
		<choose>
		<when test="keyfield=='title'">
		WHERE title
		LIKE
		CONCAT('%',#{search},'%')
		</when>
		<when test="keyfield=='company'">
		WHERE company
		LIKE
		CONCAT('%',#{search},'%')
		</when>
		</choose>
		</if>
		ORDER
		BY edit_date DESC
		LIMIT #{pageNo},5
	</select>
	
	<select id="totalBeerCount" parameterType="Beer" resultType="Integer">
		SELECT count(*) FROM beer
		<if test="search != null">
		<choose>
		<when test="keyfield=='title'">
		WHERE title
		LIKE
		CONCAT('%',#{search},'%')
		</when>
		<when test="keyfield=='company'">
		WHERE company
		LIKE
		CONCAT('%',#{search},'%')
		</when>
		</choose>
		</if>
	</select>

	<select id="readBeerOne" resultType="Beer">
		SELECT *
		FROM beer
<!-- 		LEFT JOIN beer_files ON beer.idx -->
		WHERE
		idx=#{idx}
	</select>

	<insert id="createBeer" parameterType="Beer" useGeneratedKeys="true"
		keyProperty="idx">
		INSERT INTO
		beer
		(
		title,
		content,
		price,
		edit_date,
		area,
		thumb,
		ad,
		company
		)
		VALUES
		(
		#{title},
		#{content},
		#{price},
		now(),
		#{area},
		#{thumb},
		#{ad},
		#{company}
		)
	</insert>
	
	<insert id="createMediaFile" parameterType="Beer" >
		INSERT INTO
		beer_files
		(
		original_name,
		trans_name,
		content_type,
		file_size,
		file_path,
		beer_id
		)
		VALUES
		(
		#{original_name},
		#{trans_name},
		#{content_type},
		#{file_size},
		#{file_path},
		#{beer_id}
		)
	</insert>

	<update id="updateBeer" parameterType="Beer">
		UPDATE beer SET
		title=#{title},
		content=#{content},
		price=#{price},
		edit_date=now(),
		area=#{area},
<!-- 		thumb=#{thumb}, -->
		ad=#{ad},
		company=#{company}
		WHERE
		idx=#{idx}
	</update>

	<delete id="deleteBeer" parameterType="Beer">
		DELETE FROM beer
		WHERE
		idx=#{idx}
	</delete>
	
